<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <GridView
        android:id="@+id/styleGrid"
        android:layout_width="183dp"
        android:layout_height="510dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="43dp"
        android:columnWidth="90dp"
        android:horizontalSpacing="8dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="7dp"
        tools:layout_editor_absoluteY="42dp"
        tools:layout_editor_absoluteX="194dp" />

    <SearchView
        android:layout_width="352dp"
        android:layout_height="31dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="6dp"
        app:layout_constraintBottom_toTopOf="@+id/styleGrid"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="16dp"
        android:id="@+id/searchView" />

    <ImageView
        android:id="@+id/styleImage"
        android:layout_width="179dp"
        android:layout_height="463dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="43dp"
        android:contentDescription="@string/styleImage"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/styleGrid"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_accessibility_black_24dp" />

</android.support.constraint.ConstraintLayout>