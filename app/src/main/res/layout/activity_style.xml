<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="352dp"
        android:layout_height="31dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="6dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/styleGrid"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/styleImage"
        android:layout_width="179dp"
        android:layout_height="463dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="43dp"
        android:contentDescription="@string/styleImage"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/styleGrid"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/common_google_signin_btn_text_dark_default" />

    <Button
        android:id="@+id/save"
        android:layout_width="81dp"
        android:layout_height="38dp"
        android:layout_marginBottom="-66dp"
        android:layout_marginEnd="62dp"
        android:text="@string/save_look"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <GridView
        android:id="@+id/styleGrid"
        android:layout_width="181dp"
        android:layout_height="417dp"
        android:layout_marginEnd="7dp"
        android:columnWidth="90dp"
        android:horizontalSpacing="8dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="44dp" />

</android.support.constraint.ConstraintLayout>